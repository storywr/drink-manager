<h1>User Reviews</h1>

<% @users.each do |user| %>
  <div id="usercard">
    <h2><%= user.name %></h2>
    <% user.reviews.each do |review| %>
      <%= link_to review.beer.name, beer_path(review.beer) %> - "<%= review.summary %>"<br>
      User Rating: <%= review.rating %>/10 <br><br>
      <% if @current_user.id == review.user_id %>
        <%= link_to 'Edit Review', [:edit, review] %><br><br>

        <%= button_to "delete", {:controller => :reviews,
            :action => 'destroy', :id => review.id }, :method => :delete %>
      <% end %><br><br>
    <% end %>
  </div><br>
<% end %>
